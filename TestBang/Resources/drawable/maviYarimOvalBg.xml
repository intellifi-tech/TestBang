      <solid
          android:color="#fa4166" />
      <corners android:radius="10dp"
               android:bottomRightRadius="0dp"
               android:bottomLeftRadius="10dp"
               android:topLeftRadius="10dp"
               android:topRightRadius="0dp"/>
    </shape>
  </item>
  <item >
    <shape>
      <solid
          android:color="#F05070" />
      <corners android:radius="10dp"
               android:bottomRightRadius="0dp"
               android:bottomLeftRadius="10dp"
               android:topLeftRadius="10dp"
               android:topRightRadius="0dp"/>
    </shape>
  </item>
</selector>