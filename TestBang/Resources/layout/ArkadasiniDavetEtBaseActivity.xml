<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F05070"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="65.5dp"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="17.5dp">
        <ImageView
            android:scaleType="centerInside"
            android:src="@mipmap/testbang_logo_img2"
            android:layout_width="163.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/ımageView1"
            android:layout_marginLeft="25.0dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="0.0dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yazihazne">
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="#1EB14C"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="ARKADAŞINI DAVET ET"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#11122E"
                android:gravity="center_horizontal"
                android:text=".."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/adsoyadtext" />
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="#11122E"
                android:gravity="center_horizontal"
                android:text="Arkadaşını davet et, sınav rekabeti maksimuma çıksın."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/yazihazne"
            android:scaleType="centerInside"
            android:src="@mipmap/arkadasinidavetetimg1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/ımageView3" />
        <RelativeLayout
            android:layout_below="@+id/ımageView3"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="12.0dp" >
             <Button
                android:textStyle="bold"
                android:elevation="20dp"
                android:layout_centerInParent="true"
                android:textSize="15dp"
                android:textColor="#fff"
                android:background="@drawable/davetgonderbuttonbg"
                android:text="DAVET METNİ GÖNDER"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button2" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
