<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F05070"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="65.5dp"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="17.5dp">
        <ImageView
            android:scaleType="centerInside"
            android:src="@mipmap/testbang_logo_img2"
            android:layout_width="163.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/ımageView1"
            android:layout_marginLeft="25.0dp" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1"
            android:layout_marginRight="25dp">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/relativeLayout2">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/notification1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/ımageView2" />
                <TextView
                    android:textSize="13dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/bildirimIcinBadge"
                    android:textColor="#F05070"
                    android:text="3"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:id="@+id/textView1" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="0.0dp">
        <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/yazihazne" >
                     <TextView
                        android:layout_marginTop="15dp"
                        android:textColor="#1EB14C"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="ARKADAŞINI DAVET ET"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2" />
                     <TextView
                        android:layout_marginTop="5dp"
                        android:textColor="#11122E"
                        android:gravity="center_horizontal"
                        android:text="Merve Tuğral"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3" />
                     <TextView
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#11122E"
                        android:gravity="center_horizontal"
                        android:text="Arkadaşını davet et, sınav rekabeti maksimuma çıksın."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3" />
                </LinearLayout>
                <ImageView
                    android:layout_below="@+id/yazihazne"
                    android:scaleType="centerInside"
                    android:src="@mipmap/arkadasinidavetetimg1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/ımageView3" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2" >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/hesapolusturinputbg"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50.0dp"
                android:id="@+id/linearLayout2">
                <ImageView
                    android:tint="#50ffffff"
                    android:padding="5dp"
                    android:src="@mipmap/mail_img1"
                    android:layout_width="30.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ımageView2"
                    android:layout_marginLeft="15.0dp" />
                <EditText
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:textColor="#11122E"
                    android:hint="Arkadaşının email adresi.."
                    android:textColorHint="#9011122E"
                    android:layout_marginLeft="0.0dp"
                    android:layout_marginRight="0.0dp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editText2" />
            </LinearLayout>
            <Button
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/profiliguncellebuttonbg"
                android:text="TESTBANG'E DAVET GÖNDER"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/button2" />
            <TextView
                android:textColor="#AFAFB0"
                android:textSize="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Ya Da"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
            <Button
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="10dp"
                android:textColor="#F05070"
                android:background="@drawable/davetgonderbuttonbg"
                android:text="DAVET METNİ GÖNDER"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/button2" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
