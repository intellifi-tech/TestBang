<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1">
        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/linearLayout1">
            <LinearLayout
                android:weightSum="100"
                android:background="@drawable/oturumkapatbuttonbg"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout12">
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativeLayout2">
                    <com.testbang.android.VerticalTextView
                        android:fontFamily="@font/monserratfontbold"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="8dp"
                        android:textColor="#fff"
                        android:text="TRANSKRIPT NO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" />
                </RelativeLayout>
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_weight="60"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativeLayout2">
                    <com.testbang.android.VerticalTextView
                        android:fontFamily="@font/monserratfontbold"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="25dp"
                        android:textColor="#fff"
                        android:text="256"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transkriptno1" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/relativeLayout1" >
                     <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout13" >
                    <TextView
                        android:fontFamily="@font/monserratfontbold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#11122E"
                        android:textSize="17dp"
                        android:text=".."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/basliktext"
                        android:layout_marginTop="5.5dp" />
                    <TextView
                        android:fontFamily="@font/monserratfont"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#11122E"
                        android:textSize="12dp"
                        android:text="Açıklama Yok."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/aciklamatext"
                        android:layout_marginTop="0.0dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout14"
                        android:layout_marginTop="8.5dp">
                        <TextView
                            android:fontFamily="@font/monserratfont"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#11122E"
                            android:textSize="15dp"
                            android:text=".."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/konutext" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginBottom="5dp"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/relativeLayout3" >
                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/textView5"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/monserratfont"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#11122E"
                            android:textSize="12dp"
                            android:text=".."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@id/tarihtext"
                            android:layout_marginTop="0.0dp" />
                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/monserratfontbold"
                             android:textStyle="bold"
                             android:gravity="center"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"
                             android:textColor="#EF506F"
                             android:textSize="15dp"
                             android:text="AYT"
                             android:textAppearance="?android:attr/textAppearanceMedium"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/textView5" />
                    </RelativeLayout>
                    </LinearLayout>
                     <ImageButton
                        android:visibility="invisible"
                        android:tint="#D1C5C5"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/closeicon1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/takvimdenkaldirbutton" />
                  </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
