<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardElevation="15dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#11122E"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardView1" >
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout1" >
                <ScrollView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView1" >
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout2" >
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="Ulusal Deneme Sınavı"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_marginTop="19.0dp"
                        android:layout_marginRight="21.5dp"
                        android:layout_marginLeft="19.0dp" />
                    <TextView
                        android:textSize="80dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="AYT"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_marginTop="0.0dp"
                        android:layout_marginRight="21.5dp"
                        android:layout_marginLeft="19.0dp" />
                    <TextView
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="Ulusal Deneme Sınavı Açıklaması"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_marginTop="6.0dp" />
                    <TextView
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="Sınavın Başlamasına Kalan;"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_marginTop="37.0dp"/>
                    <TextView
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#F05070"
                        android:text="00:00:00:00"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_marginTop="0.0dp"
                        android:layout_marginRight="21.5dp"
                        android:layout_marginLeft="19.0dp" />
                </LinearLayout>
                 </ScrollView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
</LinearLayout>
