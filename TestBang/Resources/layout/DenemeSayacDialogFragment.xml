<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardElevation="15dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#11122E"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardView1" >
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout1" >
                <ScrollView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView1" >
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout2" >
                    <TextView
                        android:fontFamily="@font/monserratfontbold"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="Ulusal Deneme Sınavı"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/denemeaditext"
                        android:layout_marginTop="19.0dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp" />
                    <TextView
                        android:fontFamily="@font/monserratfontbold"
                        android:textSize="80dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="AYT"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/denemeturutext"
                        android:layout_marginTop="0.0dp"
                        android:layout_marginRight="21.5dp"
                        android:layout_marginLeft="19.0dp" />
                    <TextView
                        android:fontFamily="@font/monserratfont"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="Ulusal Deneme Sınavı Açıklaması"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/denemeaciklamasitext"
                        android:layout_marginTop="6.0dp" />
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_view"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:lottie_fileName="denemesayac1.json"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        android:layout_marginTop="14.5dp" />
                    <TextView
                        android:fontFamily="@font/monserratfont"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="Sınavın Başlamasına Kalan;"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_marginTop="37.0dp"/>
                    <TextView
                        android:fontFamily="@font/monserratfontbold"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#F05070"
                        android:text="00:00:00:00"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/denemekalansuretext"
                        android:layout_marginTop="13.0dp"
                        android:layout_marginRight="21.5dp"
                        android:layout_marginLeft="19.0dp" />
                    <TextView
                        android:fontFamily="@font/monserratfontbold"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#F05070"
                        android:text="GN:SA:DK:SN"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/denemekalansuretextt"
                        android:layout_marginRight="21.5dp"
                        android:layout_marginLeft="19.0dp" />
                    <TextView
                        android:fontFamily="@font/monserratfont"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="Süre tamamlandığında otomatik denemeye yönlendirileceksiniz"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_marginTop="10.0dp"/>
                    <Button
                        android:fontFamily="@font/monserratfontbold"
                        android:layout_marginTop="40dp"
                         android:textSize="10dp"
                         android:textColor="#fff"
                         android:background="@drawable/profiliguncellebuttonbg"
                         android:text="DENEMEYE KATIL"
                         android:layout_width="match_parent"
                         android:layout_height="45dp"
                         android:layout_marginRight="20dp"
                         android:layout_marginLeft="20dp"
                         android:id="@+id/button2" />
                    </LinearLayout>
                 </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
    <ImageButton
        android:elevation="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/kirmizi_badge"
        android:src="@drawable/closeicon1"
        android:tint="#fff"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ımageButton1" />
</RelativeLayout>
