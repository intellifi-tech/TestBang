<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F05070"
    android:id="@id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="65.5dp"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="17.5dp">
        <ImageView
            android:scaleType="centerInside"
            android:src="@mipmap/testbang_logo_img2"
            android:layout_width="163.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/logoo"
            android:layout_marginLeft="25.0dp" />
        <LinearLayout
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bildirimhaznebutton"
            android:layout_marginRight="25dp">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/relativeLayout2">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/notification1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/bildirimbutton" />
                <TextView
                    android:fontFamily="@font/monserratfontbold"
                    android:textSize="13dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/bildirimIcinBadge"
                    android:textColor="#F05070"
                    android:text="3"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:id="@+id/textView1" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="0.0dp">
        <RelativeLayout
            android:background="#fff"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout4"
            android:layout_marginTop="60dp" />
        <androidx.viewpager.widget.ViewPager
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabLayout"
            android:id="@+id/viewPager1" />
        <com.google.android.material.tabs.TabLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:minHeight="?attr/actionBarSize"
            app:tabIndicatorGravity="top"
            app:tabIndicatorColor="#F05070"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="#F05070"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="#909090"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    </RelativeLayout>
</LinearLayout>
