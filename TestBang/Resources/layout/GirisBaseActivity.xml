<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#11122E"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1" >
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4" >
            <ImageView
                android:scaleType="centerInside"
                android:src="@mipmap/loginpage_icon1"
                android:layout_width="match_parent"
                android:layout_height="139.0dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/ımageView1"
                android:layout_marginTop="37.0dp" />
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:text="TestBang'e"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginTop="38.5dp" />
            <TextView
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#F05070"
                android:gravity="center_horizontal"
                android:text="HOŞGELDİN"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <TextView
                android:textSize="12dp"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:text="Testlere hazırlıkta sınırları aşın."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="8.5dp" />
            <TextView
                android:textSize="12dp"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:text="HAYDİ TEST BAŞINA."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/inputbg"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50.0dp"
                android:id="@+id/linearLayout1">
                <ImageView
                    android:tint="#50ffffff"
                    android:padding="5dp"
                    android:src="@mipmap/login_email_icon"
                    android:layout_width="30.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ımageView2"
                    android:layout_marginLeft="15.0dp" />
                <EditText
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:textColor="#fff"
                    android:hint="Email Adresiniz"
                    android:textColorHint="#90ffffff"
                    android:layout_marginLeft="0.0dp"
                    android:layout_marginRight="0.0dp"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editText1" />
              </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/inputbg"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50.0dp"
                android:id="@+id/linearLayout2">
               <ImageView
                    android:tint="#50ffffff"
                    android:padding="7dp"
                    android:src="@mipmap/login_lock_icon"
                    android:layout_width="30.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ımageView2"
                    android:layout_marginLeft="15.0dp" />
                <EditText
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:textColor="#fff"
                    android:hint="Şifreniz"
                    android:textColorHint="#90ffffff"
                    android:layout_marginLeft="0.0dp"
                    android:layout_marginRight="0.0dp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editText2" />
            </LinearLayout>
            <Button
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="@drawable/girisbuttonbg"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="GİRİŞ YAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1" />
            <LinearLayout
                android:layout_marginTop="12.0dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/linearLayout3"
                android:layout_marginBottom="12dp">
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#F05070"
                    android:textSize="16dp"
                    android:text="Şifreni Unuttum"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5" />
                <TextView
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:gravity="right|center_vertical"
                    android:text="Üye ol"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView6" />
            </LinearLayout>
            <Button
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textColor="#00AEEF"
                android:background="@drawable/facebookbuttonbg"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Facebook ile Log-in Ol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>