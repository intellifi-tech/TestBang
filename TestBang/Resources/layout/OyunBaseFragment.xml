
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:scrollbars="none"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout11">
            <android.support.v7.widget.CardView
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView1" >
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout1" >
                    <ImageView
                        android:src="@mipmap/meydanokuimg"
                        android:layout_width="match_parent"
                        android:layout_height="173dp"
                        android:id="@+id/ımageView1" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#F05070"
                android:text="ARKADAŞINA MEYDAN OKU"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#11122E"
                android:text="Arkadaşını davet et, sınav rekabetin maksimuma çıksın!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <Button
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                     android:layout_marginBottom="15dp"
                    android:textSize="10dp"
                    android:textColor="#fff"
                    android:background="@drawable/girisbuttonbg"
                    android:text="MEYDAN OKU"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/button3" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>