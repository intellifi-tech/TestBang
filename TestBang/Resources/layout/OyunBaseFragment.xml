
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout11">
            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView1" >
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout1" >
                    <ImageView
                        android:src="@mipmap/meydanokuimg"
                        android:layout_width="match_parent"
                        android:layout_height="173dp"
                        android:id="@+id/ımageView1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:fontFamily="@font/monserratfontbold"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#F05070"
                android:text="MEYDAN OKU"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <TextView
                android:fontFamily="@font/monserratfont"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#11122E"
                android:text="TestBang kullanıcılarına meydan oku, sınav rekabetin maksimuma çıksın!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/hesapolusturinputbg"
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="50.0dp"
                        android:id="@+id/linearLayout1">
                    <ImageView
                        android:tint="#11122E"
                        android:padding="8dp"
                        android:src="@mipmap/derssecimg1"
                        android:layout_width="30.5dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ımageView2"
                        android:layout_marginLeft="15.0dp" />
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinner1" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/girisbuton"
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="50.0dp"
                        android:id="@+id/linearLayout3">
                    <ImageView
                        android:tint="#5011122E"
                        android:padding="8dp"
                        android:src="@mipmap/sorusayisisecimg"
                        android:layout_width="30.5dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ımageView2"
                        android:layout_marginLeft="15.0dp" />
                        <TextView
                            android:fontFamily="@font/monserratfontbold"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:textColor="#fff"
                            android:text="10 Soru"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinner3" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/girisbuton"
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="50.0dp"
                        android:id="@+id/linearLayout4">
                    <ImageView
                        android:tint="#5011122E"
                        android:padding="8dp"
                        android:src="@mipmap/suresecimg"
                        android:layout_width="30.5dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ımageView2"
                        android:layout_marginLeft="15.0dp" />
                        <TextView
                            android:fontFamily="@font/monserratfontbold"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:textColor="#fff"
                            android:text="10 Dakika"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinner3" />
                    </LinearLayout>
                     <LinearLayout
                 android:paddingBottom="15dp"
                 android:paddingTop="15dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="15dp"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="15dp"
                 android:orientation="horizontal"
                 android:minWidth="25px"
                 android:minHeight="25px"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:weightSum="100"
                 android:id="@+id/linearLayout15" >
                 <Button
                    android:fontFamily="@font/monserratfontbold"
                     android:textSize="10dp"
                     android:textColor="#fff"
                     android:background="@drawable/oturumkapatbuttonbg"
                     android:text="Arkadaşlarından Seç"
                     android:layout_width="0dp"
                     android:layout_weight="50"
                     android:layout_height="50dp"
                     android:layout_marginRight="5dp"
                     android:id="@+id/button3" />
                 <Button
                    android:fontFamily="@font/monserratfontbold"
                     android:layout_marginLeft="5dp"
                     android:textSize="10dp"
                     android:textColor="#fff"
                     android:background="@drawable/rasgelerakipbuttonbg"
                     android:text="Rasgele Rakip..."
                     android:layout_width="0dp"
                     android:layout_weight="50"
                     android:layout_height="50dp"
                     android:id="@+id/button2" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>