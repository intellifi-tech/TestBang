<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F05070"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="65.5dp"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="17.5dp">
        <ImageView
            android:scaleType="centerInside"
            android:src="@mipmap/testbang_logo_img2"
            android:layout_width="163.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/ımageView1"
            android:layout_marginLeft="25.0dp" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1"
            android:layout_marginRight="25dp">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/relativeLayout2">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/notification1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/ımageView2" />
                <TextView
                    android:textSize="13dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/bildirimIcinBadge"
                    android:textColor="#F05070"
                    android:text="3"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:id="@+id/textView1" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="0.0dp">
        <ScrollView
            android:scrollbars="none"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView1">
            <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout11">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textColor="#1EB14C"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="ÜYELİK BİLGİLERİ"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#11122E"
                    android:gravity="center_horizontal"
                    android:text="Merve Tuğral"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />
                <LinearLayout
                    android:weightSum="99"
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout12">
                    <android.support.v7.widget.CardView
                        app:cardElevation="8dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_weight="33"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:id="@+id/cardView1" >
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/relativeLayout4" >
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout1" >
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="50"
                                android:textColor="#11122E"
                                android:gravity="center_horizontal|bottom"
                                android:text="Paket Adı"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView4" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_weight="50"
                                android:textColor="#11122E"
                                android:gravity="center_horizontal|top"
                                android:textStyle="bold"
                                android:text="AYLIK ENSEK"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView5" />
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        app:cardElevation="8dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_weight="33"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:id="@+id/cardView1" >
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/relativeLayout4" >
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout1" >
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="50"
                                android:textColor="#11122E"
                                android:gravity="center_horizontal|bottom"
                                android:text="Aylık Fatura Bedeli"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView4" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_weight="50"
                                android:textColor="#F05070"
                                android:gravity="center_horizontal|top"
                                android:textStyle="bold"
                                android:text="₺9.90"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView5" />
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        app:cardElevation="8dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_weight="33"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:id="@+id/cardView1" >
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/relativeLayout4" >
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout1" >
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="50"
                                android:textColor="#11122E"
                                android:gravity="center_horizontal|bottom"
                                android:text="Ödeme Metodu"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView4" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_weight="50"
                                android:textColor="#1EB04B"
                                android:gravity="center_horizontal|top"
                                android:textStyle="bold"
                                android:text="VISA****2356"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView5" />
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                 </LinearLayout>
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout5" >
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout13" >
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout14">
                    <TextView
                        android:textSize="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="50"
                        android:textColor="#11122E"
                        android:gravity="center_horizontal|bottom"
                        android:text="Sözleşme Bitiş Tarihi"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" />
                        <TextView
                            android:background="@drawable/sozlesmebitisbg1"
                            android:padding="8dp"
                            android:textSize="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="50"
                            android:textColor="#F05070"
                            android:gravity="center_horizontal|bottom"
                            android:text="N/A"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout14">
                    <TextView
                        android:textSize="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="50"
                        android:textColor="#11122E"
                        android:gravity="center_horizontal|bottom"
                        android:text="Ödeme Geçmişi"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" />
                    <TextView
                        android:background="@drawable/odemegecmisiincelebg"
                        android:padding="8dp"
                        android:textSize="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="50"
                        android:textColor="#fff"
                        android:gravity="center_horizontal|bottom"
                        android:text="İNCELE"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" />
                    </LinearLayout>
                </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                android:layout_marginBottom="15dp"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="15dp"
                 android:orientation="horizontal"
                 android:minWidth="25px"
                 android:minHeight="25px"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/linearLayout15" >
                 <Button
                     android:textSize="10dp"
                     android:textColor="#fff"
                     android:background="@drawable/oturumkapatbuttonbg"
                     android:text="PAKET DEĞİŞTİR"
                     android:layout_width="150dp"
                     android:layout_height="45dp"
                     android:layout_marginRight="5dp"
                     android:id="@+id/button3" />
                 <Button
                     android:layout_marginLeft="5dp"
                     android:textSize="10dp"
                     android:textColor="#fff"
                     android:background="@drawable/ayarlarbuttonbg"
                     android:text="ÜYELİĞİ DEĞİŞTİR"
                     android:layout_width="150dp"
                     android:layout_height="45dp"
                     android:id="@+id/button2" />
            </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout16" >
                <TextView
                    android:textColor="#F05070"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="Ödeme Bilgileri"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" />
                    <LinearLayout
                            android:layout_marginTop="10dp"
                            android:background="@drawable/hesapolusturinputbg"
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="50.0dp"
                            android:id="@+id/linearLayout2">
                            <ImageView
                                android:tint="#50ffffff"
                                android:padding="5dp"
                                android:src="@mipmap/login_email_icon"
                                android:layout_width="30.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ımageView2"
                                android:layout_marginLeft="15.0dp" />
                            <EditText
                                android:textSize="12dp"
                                android:paddingLeft="15dp"
                                android:background="@null"
                                android:textColor="#11122E"
                                android:hint="Ad Soyad"
                                android:textColorHint="#9011122E"
                                android:layout_marginLeft="0.0dp"
                                android:layout_marginRight="0.0dp"
                                android:inputType="textPersonName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/editText2" />
                        </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="10dp"
                            android:background="@drawable/hesapolusturinputbg"
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="50.0dp"
                            android:id="@+id/linearLayout2">
                            <ImageView
                                android:tint="#50ffffff"
                                android:padding="5dp"
                                android:src="@mipmap/cardnumbericon1"
                                android:layout_width="30.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ımageView2"
                                android:layout_marginLeft="15.0dp" />
                            <EditText
                                android:textSize="12dp"
                                android:paddingLeft="15dp"
                                android:background="@null"
                                android:textColor="#11122E"
                                android:hint="Kart Numarası"
                                android:textColorHint="#9011122E"
                                android:layout_marginLeft="0.0dp"
                                android:layout_marginRight="0.0dp"
                                android:inputType="number"
                                android:maxLength="16"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/editText2" />
                        </LinearLayout>
                    <LinearLayout
                        android:weightSum="100"
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout4"
                        android:layout_marginTop="15.5dp">
                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:background="@drawable/hesapolusturinputbg"
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:layout_height="50.0dp"
                            android:id="@+id/linearLayout1">
                            <ImageView
                                android:tint="#5011122E"
                                android:padding="5dp"
                                android:src="@mipmap/calender_img1"
                                android:layout_width="30.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ımageView2"
                                android:layout_marginLeft="15.0dp" />
                            <EditText
                                android:textSize="12dp"
                                android:paddingLeft="15dp"
                                android:background="@null"
                                android:textColor="#11122E"
                                android:hint="00/00"
                                android:textColorHint="#9011122E"
                                android:layout_marginLeft="0.0dp"
                                android:layout_marginRight="0.0dp"
                                android:inputType="textPersonName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/editText1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/hesapolusturinputbg"
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:layout_height="50.0dp"
                            android:id="@+id/linearLayout1">
                            <ImageView
                                android:tint="#5011122E"
                                android:padding="5dp"
                                android:src="@mipmap/login_lock_icon"
                                android:layout_width="30.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ımageView2"
                                android:layout_marginLeft="15.0dp" />
                            <EditText
                                android:maxLength="3"
                                android:textSize="12dp"
                                android:paddingLeft="15dp"
                                android:background="@null"
                                android:textColor="#11122E"
                                android:hint="CVC"
                                android:textColorHint="#9011122E"
                                android:layout_marginLeft="0.0dp"
                                android:layout_marginRight="0.0dp"
                                android:inputType="textPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/editText1" />
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                     android:textSize="10dp"
                     android:textColor="#fff"
                     android:background="@drawable/ayarlarbuttonbg"
                     android:text="ÖDEME BİLGİLERİNİ GÜNCELLE"
                     android:layout_marginTop="15dp"
                     android:layout_marginBottom="15dp"
                     android:layout_width="match_parent"
                     android:layout_height="45dp"
                     android:id="@+id/button2" />
                </LinearLayout>
            </LinearLayout>
          </ScrollView>
    </RelativeLayout>
</LinearLayout>
